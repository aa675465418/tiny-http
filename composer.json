{
  "name": "esase/tiny-http",
  "description": "An abstraction layer for http requests and responses",
  "license": "BSD-3-Clause",
  "keywords": [
    "esase",
    "tinyframework",
    "lightweight",
    "mvc",
    "http",
    "request",
    "response"
  ],
  "support": {
  },
  "require": {
    "php": "^7.4 || ^8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0 || ^10.0",
    "php-coveralls/php-coveralls": "^2.2"
  },
  "autoload": {
    "psr-4": {
      "Tiny\\Http\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "TinyTest\\Http\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
